<footer 
  class="footer-main color-{{ section.settings.color_scheme }}"
  style="
    --footer-bg-color: {{ section.settings.background_color }};
    --footer-text-color: {{ section.settings.text_color }};
    --footer-heading-color: {{ section.settings.heading_color }};
    --footer-link-color: {{ section.settings.link_color }};
    --footer-border-color: {{ section.settings.border_color }};
    --footer-social-hover: {{ section.settings.social_hover_color }};
  "
>
  <div class="footer-main__container">
    <!-- Main Footer Content -->
    <div class="footer-main__content">
      <!-- Company Information -->
      <div class="footer-main__column footer-main__column--company">
        {% if section.settings.logo %}
          <div class="footer-main__logo">
            <img 
              src="{{ section.settings.logo | image_url: width: 200 }}"
              alt="{{ shop.name }}"
              width="200"
              height="auto"
              loading="lazy"
            >
          </div>
        {% else %}
          <div class="footer-main__company-name">
            <h3>{{ shop.name }}</h3>
          </div>
        {% endif %}

        {% if section.settings.company_description != blank %}
          <p class="footer-main__description">{{ section.settings.company_description }}</p>
        {% endif %}

        <!-- Contact Information -->
        {% if section.settings.phone != blank or section.settings.email != blank or section.settings.address != blank %}
          <div class="footer-main__contact">
            {% if section.settings.phone != blank %}
              <div class="footer-main__contact-item">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
                  <path d="M17 12.6V15.1C17.0005 15.3568 16.9441 15.6103 16.8351 15.8422C16.7261 16.074 16.5672 16.2781 16.3698 16.4386C16.1723 16.5992 15.9417 16.7121 15.6946 16.769C15.4474 16.8258 15.1899 16.8253 14.943 16.767C12.4428 16.2071 10.1328 15.0322 8.233 13.35C6.4764 11.8004 5.1293 9.82536 4.317 7.6C3.683 5.85736 3.683 3.94264 4.317 2.2C5.1293 0.0746424 6.4764 -1.90041 8.233 -3.45C10.1328 -5.13218 12.4428 -6.30714 14.943 -6.867C15.1899 -6.92532 15.4474 -6.92583 15.6946 -6.86898C15.9417 -6.81214 16.1723 -6.69923 16.3698 -6.53864C16.5672 -6.37805 16.7261 -6.17398 16.8351 -5.94215C16.9441 -5.71032 17.0005 -5.45683 17 -5.2V-2.7C17.0008 -2.19 16.8061 -1.69994 16.4572 -1.33C16.1083 -0.960056 15.6342 -0.750675 15.133 -0.75H14.867C14.3658 -0.750675 13.8917 -0.960056 13.5428 -1.33C13.1939 -1.69994 12.9992 -2.19 13 -2.7V-5.2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
              </div>
            {% endif %}

            {% if section.settings.email != blank %}
              <div class="footer-main__contact-item">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
                  <path d="M3 3H15C16.1 3 17 3.9 17 5V13C17 14.1 16.1 15 15 15H3C1.9 15 1 14.1 1 13V5C1 3.9 1.9 3 3 3Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="L17 5L9 10L1 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
              </div>
            {% endif %}

            {% if section.settings.address != blank %}
              <div class="footer-main__contact-item">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
                  <path d="M15 7.5C15 12 9 16.5 9 16.5S3 12 3 7.5C3 5.51088 3.79018 3.60322 5.1967 2.1967C6.60322 0.790176 8.51088 0 10.5 0C12.4891 0 14.3968 0.790176 15.8033 2.1967C17.2098 3.60322 18 5.51088 18 7.5Z" stroke="currentColor" stroke-width="1.5"/>
                  <circle cx="9" cy="7.5" r="2.25" stroke="currentColor" stroke-width="1.5"/>
                </svg>
                <span>{{ section.settings.address }}</span>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <!-- Quick Links -->
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'link_list' %}
              <div class="footer-main__column" {{ block.shopify_attributes }}>
                {% if block.settings.heading != blank %}
                  <h4 class="footer-main__heading">{{ block.settings.heading }}</h4>
                {% endif %}
                
                {% if block.settings.menu != blank %}
                  <ul class="footer-main__links">
                    {% for link in linklists[block.settings.menu].links %}
                      <li class="footer-main__link-item">
                        <a href="{{ link.url }}" class="footer-main__link">{{ link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      {% endif %}

      <!-- Social Media & Payment -->
      <div class="footer-main__column footer-main__column--social">
        {% if section.settings.social_heading != blank %}
          <h4 class="footer-main__heading">{{ section.settings.social_heading }}</h4>
        {% endif %}

        {% if section.settings.show_social_icons %}
          <div class="footer-main__social">
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="footer-main__social-link" target="_blank" rel="noopener" aria-label="Facebook">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M18 2H15C13.6739 2 12.4021 2.52678 11.4645 3.46447C10.5268 4.40215 10 5.67392 10 7V10H7V14H10V22H14V14H17L18 10H14V7C14 6.73478 14.1054 6.48043 14.2929 6.29289C14.4804 6.10536 14.7348 6 15 6H18V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}

            {% if settings.social_instagram_link != blank %}
              <a href="{{ settings.social_instagram_link }}" class="footer-main__social-link" target="_blank" rel="noopener" aria-label="Instagram">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"/>
