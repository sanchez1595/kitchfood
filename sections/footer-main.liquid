            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.show_payment_icons %}
          <div class="footer-main__payment">
            <h5 class="footer-main__payment-title">{{ section.settings.payment_heading | default: 'Métodos de pago' }}</h5>
            <div class="footer-main__payment-icons">
              <span class="footer-main__payment-icon">VISA</span>
              <span class="footer-main__payment-icon">MC</span>
              <span class="footer-main__payment-icon">AMEX</span>
              <span class="footer-main__payment-icon">PayPal</span>
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-main__bottom">
      <div class="footer-main__bottom-content">
        <div class="footer-main__copyright">
          <p>{{ section.settings.copyright | default: '© 2024 ' | append: shop.name | append: '. Todos los derechos reservados.' }}</p>
        </div>
        
        {% if section.settings.show_policy_links %}
          <div class="footer-main__policies">
            {% for link in linklists[section.settings.policy_menu].links %}
              <a href="{{ link.url }}" class="footer-main__policy-link">{{ link.title }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer-main {
    background-color: var(--footer-bg-color, #333333);
    color: var(--footer-text-color, #ffffff);
    padding: 60px 0 0 0;
  }

  .footer-main__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-main__content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-main__column--company {
    grid-column: span 1;
  }

  .footer-main__column--social {
    grid-column: span 1;
  }

  .footer-main__logo {
    margin-bottom: 1.5rem;
  }

  .footer-main__logo img {
    max-width: 150px;
    height: auto;
    filter: brightness(0) invert(1);
  }

  .footer-main__company-name h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    color: var(--footer-heading-color, #ffffff);
  }

  .footer-main__description {
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0 0 2rem 0;
    opacity: 0.9;
  }

  .footer-main__contact {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-main__contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.95rem;
  }

  .footer-main__contact-item svg {
    color: var(--footer-link-color, #ff6b35);
    flex-shrink: 0;
  }

  .footer-main__contact-item a {
    color: var(--footer-text-color, #ffffff);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-main__contact-item a:hover {
    color: var(--footer-link-color, #ff6b35);
  }

  .footer-main__heading {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    color: var(--footer-heading-color, #ffffff);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-main__links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-main__link-item {
    margin-bottom: 0.75rem;
  }

  .footer-main__link {
    color: var(--footer-text-color, #ffffff);
    text-decoration: none;
    font-size: 0.95rem;
    opacity: 0.9;
    transition: all 0.3s ease;
  }

  .footer-main__link:hover {
    color: var(--footer-link-color, #ff6b35);
    opacity: 1;
    transform: translateX(4px);
  }

  .footer-main__social {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .footer-main__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--footer-text-color, #ffffff);
    transition: all 0.3s ease;
  }

  .footer-main__social-link:hover {
    background-color: var(--footer-social-hover, #ff6b35);
    transform: translateY(-2px);
  }

  .footer-main__payment {
    margin-top: 1.5rem;
  }

  .footer-main__payment-title {
    font-size: 0.9rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: var(--footer-heading-color, #ffffff);
  }

  .footer-main__payment-icons {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .footer-main__payment-icon {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--footer-text-color, #ffffff);
  }

  .footer-main__bottom {
    border-top: 1px solid var(--footer-border-color, rgba(255, 255, 255, 0.2));
    padding: 2rem 0;
  }

  .footer-main__bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .footer-main__copyright {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .footer-main__copyright p {
    margin: 0;
  }

  .footer-main__policies {
    display: flex;
    gap: 2rem;
  }

  .footer-main__policy-link {
    color: var(--footer-text-color, #ffffff);
    text-decoration: none;
    font-size: 0.9rem;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .footer-main__policy-link:hover {
    color: var(--footer-link-color, #ff6b35);
    opacity: 1;
  }

  /* Responsive Design */
  @media screen and (max-width: 968px) {
    .footer-main__content {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .footer-main__column--company {
      grid-column: span 2;
    }

    .footer-main__column--social {
      grid-column: span 2;
    }
  }

  @media screen and (max-width: 768px) {
    .footer-main {
      padding: 40px 0 0 0;
    }

    .footer-main__content {
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .footer-main__column--company,
    .footer-main__column--social {
      grid-column: span 1;
    }

    .footer-main__bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .footer-main__policies {
      gap: 1rem;
    }

    .footer-main__social {
      justify-content: center;
    }
  }

  @media screen and (max-width: 480px) {
    .footer-main__container {
      padding: 0 1rem;
    }

    .footer-main__contact {
      gap: 0.75rem;
    }

    .footer-main__social-link {
      width: 36px;
      height: 36px;
    }

    .footer-main__policies {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
{% endstylesheet %}

