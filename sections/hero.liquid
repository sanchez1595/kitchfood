{% liquid
  assign slide_count = section.blocks.size
  assign autoplay_enabled = section.settings.autoplay_enabled
  assign autoplay_duration = section.settings.autoplay_duration
  assign show_indicators = section.settings.show_indicators
  assign show_arrows = section.settings.show_arrows
  
  # Set default values if no slides exist
  if slide_count == 0
    assign slide_count = 1
  endif
%}

<div 
  class="hero-carousel color-{{ section.settings.color_scheme }}" 
  style="
    --hero-height: {{ section.settings.section_height }}vh;
    --hero-bg-color: {{ section.settings.background_color }};
    --hero-text-color: {{ section.settings.text_color }};
    --hero-button-bg: {{ section.settings.button_background_color }};
    --hero-button-text: {{ section.settings.button_text_color }};
    --hero-indicator-active: {{ section.settings.indicator_active_color }};
    --hero-indicator-inactive: {{ section.settings.indicator_inactive_color }};
  "
>
  <div class="hero-carousel__container">
    <!-- Slides Container -->
    <div 
      class="hero-carousel__slides"
      data-slideshow
      data-autoplay="{{ autoplay_enabled }}"
      data-duration="{{ autoplay_duration }}"
      data-slide-count="{{ slide_count }}"
    >
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div 
            class="hero-carousel__slide{% if forloop.first %} hero-carousel__slide--active{% endif %}"
            data-slide="{{ forloop.index0 }}"
            style="
              {% if block.settings.background_image %}
                background-image: url('{{ block.settings.background_image | image_url: width: 2000 }}');
              {% else %}
                background-color: {{ block.settings.slide_background_color | default: section.settings.background_color }};
              {% endif %}
            "
            {{ block.shopify_attributes }}
          >
            {% if block.settings.background_image %}
              <div class="hero-carousel__slide-overlay" style="background-color: {{ block.settings.overlay_color | default: 'rgba(0,0,0,0.3)' }};"></div>
            {% endif %}
            
            <div class="hero-carousel__slide-content">
              <div class="hero-carousel__content-wrapper">
                {% if block.settings.heading != blank %}
                  <h1 class="hero-carousel__heading">
                    {{ block.settings.heading }}
                  </h1>
                {% endif %}
                
                {% if block.settings.subheading != blank %}
                  <p class="hero-carousel__subheading">
                    {{ block.settings.subheading }}
                  </p>
                {% endif %}
                
                {% if block.settings.button_text != blank %}
                  <div class="hero-carousel__button-wrapper">
                    <a 
                      href="{{ block.settings.button_link | default: '#' }}" 
                      class="hero-carousel__button"
                      {% if block.settings.button_link == blank %}onclick="return false;"{% endif %}
                      {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener"{% endif %}
                    >
                      {{ block.settings.button_text }}
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <!-- Default slide when no blocks exist -->
        <div class="hero-carousel__slide hero-carousel__slide--active" data-slide="0">
          <div class="hero-carousel__slide-content">
            <div class="hero-carousel__content-wrapper">
              <h1 class="hero-carousel__heading">Dominamos la operación de tu cocina.</h1>
              <p class="hero-carousel__subheading">Equipamiento inteligente para quienes no cocinan por intuición, sino por estrategia.</p>
              <div class="hero-carousel__button-wrapper">
                <a href="#" class="hero-carousel__button" onclick="return false;">CONTACTANOS</a>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
    
    <!-- Navigation Arrows -->
    {% if show_arrows and slide_count > 1 %}
      <button 
        class="hero-carousel__arrow hero-carousel__arrow--prev" 
        data-slide-prev
        aria-label="Previous slide"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <button 
        class="hero-carousel__arrow hero-carousel__arrow--next" 
        data-slide-next
        aria-label="Next slide"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    {% endif %}
    
    <!-- Slide Indicators -->
    {% if show_indicators and slide_count > 1 %}
      <div class="hero-carousel__indicators" data-indicators>
        {% for i in (1..slide_count) %}
          <button 
            class="hero-carousel__indicator{% if forloop.first %} hero-carousel__indicator--active{% endif %}"
            data-slide-to="{{ forloop.index0 }}"
            aria-label="Go to slide {{ forloop.index }}"
          ></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .hero-carousel {
    position: relative;
    width: 100%;
    height: var(--hero-height, 60vh);
    min-height: 400px;
    overflow: hidden;
    background-color: var(--hero-bg-color, #b8b8b8);
  }

  .hero-carousel__container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-carousel__slides {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-carousel__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease-in-out, visibility 0.6s ease-in-out;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    padding: 0 2rem;
  }

  .hero-carousel__slide--active {
    opacity: 1;
    visibility: visible;
  }

  .hero-carousel__slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-carousel__slide-content {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-carousel__content-wrapper {
    max-width: 600px;
    color: var(--hero-text-color, #000);
  }

  .hero-carousel__heading {
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 1.5rem 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    letter-spacing: -0.02em;
  }

  .hero-carousel__subheading {
    font-size: clamp(1.1rem, 2.5vw, 1.4rem);
    line-height: 1.4;
    margin: 0 0 2.5rem 0;
    opacity: 0.9;
    font-weight: 400;
  }

  .hero-carousel__button-wrapper {
    margin-top: 2rem;
  }

  .hero-carousel__button {
    display: inline-block;
    background-color: var(--hero-button-bg, #333);
    color: var(--hero-button-text, #fff);
    padding: 1rem 2.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border: none;
    cursor: pointer;
  }

  .hero-carousel__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    opacity: 0.9;
  }

  .hero-carousel__button:active {
    transform: translateY(0);
  }

  /* Navigation Arrows */
  .hero-carousel__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
    color: #333;
  }

  .hero-carousel__arrow:hover {
    background: rgba(255, 255, 255, 1);
    transform: translateY(-50%) scale(1.1);
  }

  .hero-carousel__arrow--prev {
    left: 2rem;
  }

  .hero-carousel__arrow--next {
    right: 2rem;
  }

  /* Slide Indicators */
  .hero-carousel__indicators {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    display: flex;
    gap: 0.75rem;
    z-index: 10;
  }

  .hero-carousel__indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: var(--hero-indicator-inactive, rgba(255, 255, 255, 0.5));
  }

  .hero-carousel__indicator--active {
    background-color: var(--hero-indicator-active, #ff0000);
  }

  .hero-carousel__indicator:hover {
    transform: scale(1.2);
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .hero-carousel {
      height: auto;
      min-height: 500px;
    }

    .hero-carousel__slide {
      padding: 0 1rem;
    }

    .hero-carousel__content-wrapper {
      max-width: 100%;
      text-align: center;
    }

    .hero-carousel__heading {
      font-size: clamp(1.8rem, 8vw, 2.5rem);
      margin-bottom: 1rem;
    }

    .hero-carousel__subheading {
      font-size: clamp(1rem, 4vw, 1.2rem);
      margin-bottom: 2rem;
    }

    .hero-carousel__button {
      padding: 0.875rem 2rem;
      font-size: 0.9rem;
    }

    .hero-carousel__arrow {
      width: 40px;
      height: 40px;
    }

    .hero-carousel__arrow--prev {
      left: 1rem;
    }

    .hero-carousel__arrow--next {
      right: 1rem;
    }

    .hero-carousel__indicators {
      bottom: 1.5rem;
      left: 50%;
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 480px) {
    .hero-carousel__slide {
      padding: 0 0.75rem;
    }

    .hero-carousel__indicators {
      bottom: 1rem;
    }
  }
{% endstylesheet %}

<script>
  class HeroCarousel {
    constructor(element) {
      this.element = element;
      this.slides = element.querySelectorAll('.hero-carousel__slide');
      this.indicators = element.querySelectorAll('.hero-carousel__indicator');
      this.prevButton = element.querySelector('[data-slide-prev]');
      this.nextButton = element.querySelector('[data-slide-next]');
      this.currentSlide = 0;
      this.isAutoplay = element.querySelector('[data-slideshow]').dataset.autoplay === 'true';
      this.autoplayDuration = parseInt(element.querySelector('[data-slideshow]').dataset.duration) || 5000;
      this.autoplayTimer = null;
      this.isPaused = false;

      this.init();
    }

    init() {
      // Add event listeners
      if (this.prevButton) {
        this.prevButton.addEventListener('click', () => this.goToPrevSlide());
      }
      
      if (this.nextButton) {
        this.nextButton.addEventListener('click', () => this.goToNextSlide());
      }

      this.indicators.forEach((indicator, index) => {
        indicator.addEventListener('click', () => this.goToSlide(index));
      });

      // Pause autoplay on hover
      this.element.addEventListener('mouseenter', () => this.pauseAutoplay());
      this.element.addEventListener('mouseleave', () => this.resumeAutoplay());

      // Pause autoplay when page is not visible
      document.addEventListener('visibilitychange', () => {
        if (document.hidden) {
          this.pauseAutoplay();
        } else {
          this.resumeAutoplay();
        }
      });

      // Touch/swipe support
      this.addTouchSupport();

      // Start autoplay if enabled
      if (this.isAutoplay) {
        this.startAutoplay();
      }

      // Keyboard support
      this.element.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
          this.goToPrevSlide();
        } else if (e.key === 'ArrowRight') {
          this.goToNextSlide();
        }
      });

      // Make carousel focusable for keyboard navigation
      this.element.setAttribute('tabindex', '0');
    }

    goToSlide(index) {
      if (index === this.currentSlide || index < 0 || index >= this.slides.length) return;

      // Remove active class from current slide and indicator
      this.slides[this.currentSlide].classList.remove('hero-carousel__slide--active');
      if (this.indicators[this.currentSlide]) {
        this.indicators[this.currentSlide].classList.remove('hero-carousel__indicator--active');
      }

      // Set new current slide
      this.currentSlide = index;

      // Add active class to new slide and indicator
      this.slides[this.currentSlide].classList.add('hero-carousel__slide--active');
      if (this.indicators[this.currentSlide]) {
        this.indicators[this.currentSlide].classList.add('hero-carousel__indicator--active');
      }

      // Update ARIA attributes for accessibility
      this.slides.forEach((slide, i) => {
        slide.setAttribute('aria-hidden', i !== this.currentSlide);
      });

      // Reset autoplay
      if (this.isAutoplay && !this.isPaused) {
        this.resetAutoplay();
      }
    }

    goToNextSlide() {
      const nextIndex = (this.currentSlide + 1) % this.slides.length;
      this.goToSlide(nextIndex);
    }

    goToPrevSlide() {
      const prevIndex = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
      this.goToSlide(prevIndex);
    }

    startAutoplay() {
      if (this.slides.length <= 1) return;
      
      this.autoplayTimer = setInterval(() => {
        if (!this.isPaused) {
          this.goToNextSlide();
        }
      }, this.autoplayDuration);
    }

    pauseAutoplay() {
      this.isPaused = true;
    }

    resumeAutoplay() {
      this.isPaused = false;
    }

    resetAutoplay() {
      if (this.autoplayTimer) {
        clearInterval(this.autoplayTimer);
      }
      this.startAutoplay();
    }

    addTouchSupport() {
      let startX = 0;
      let endX = 0;

      this.element.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
      }, { passive: true });

      this.element.addEventListener('touchend', (e) => {
        endX = e.changedTouches[0].clientX;
        this.handleSwipe();
      }, { passive: true });

      this.handleSwipe = () => {
        const diffX = startX - endX;
        const threshold = 50; // minimum distance for swipe

        if (Math.abs(diffX) > threshold) {
          if (diffX > 0) {
            // Swipe left - go to next slide
            this.goToNextSlide();
          } else {
            // Swipe right - go to previous slide
            this.goToPrevSlide();
          }
        }
      };
    }
  }

  // Initialize carousel when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    const heroCarousels = document.querySelectorAll('.hero-carousel');
    heroCarousels.forEach(carousel => {
      new HeroCarousel(carousel);
    });
  });

  // Reinitialize on AJAX page loads (if needed)
  document.addEventListener('shopify:section:load', (event) => {
    if (event.target.querySelector('.hero-carousel')) {
      const carousel = event.target.querySelector('.hero-carousel');
      new HeroCarousel(carousel);
    }
  });
</script>

