{% liquid
  assign featured_block = section.blocks | where: 'type', 'featured_category' | first
  assign regular_blocks = section.blocks | where: 'type', 'category'
%}

<section 
  class="category-grid color-{{ section.settings.color_scheme }}"
  style="
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --category-bg-color: {{ section.settings.category_background_color }};
    --category-text-color: {{ section.settings.category_text_color }};
    --featured-bg-color: {{ section.settings.featured_background_color }};
    --featured-text-color: {{ section.settings.featured_text_color }};
  "
>
  <div class="category-grid__container">
    {% if section.settings.heading != blank %}
      <div class="category-grid__header">
        <h2 class="category-grid__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="category-grid__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="category-grid__grid">
      <!-- Featured Category Block -->
      {% if featured_block %}
        <div 
          class="category-grid__item category-grid__item--featured"
          {{ featured_block.shopify_attributes }}
        >
          <div class="category-grid__item-content">
            {% if featured_block.settings.image %}
              <div class="category-grid__item-image">
                <img 
                  src="{{ featured_block.settings.image | image_url: width: 600 }}"
                  alt="{{ featured_block.settings.image.alt | escape }}"
                  width="{{ featured_block.settings.image.width }}"
                  height="{{ featured_block.settings.image.height }}"
                  loading="lazy"
                >
              </div>
            {% endif %}
            
            <div class="category-grid__item-text">
              {% if featured_block.settings.title != blank %}
                <h3 class="category-grid__item-title">{{ featured_block.settings.title }}</h3>
              {% endif %}
              
              {% if featured_block.settings.description != blank %}
                <p class="category-grid__item-description">{{ featured_block.settings.description }}</p>
              {% endif %}
              
              {% if featured_block.settings.button_text != blank %}
                <a 
                  href="{{ featured_block.settings.button_link | default: '#' }}" 
                  class="category-grid__item-button"
                  {% if featured_block.settings.button_link == blank %}onclick="return false;"{% endif %}
                >
                  {{ featured_block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}

      <!-- Regular Category Blocks -->
      {% for block in regular_blocks limit: 5 %}
        <div 
          class="category-grid__item category-grid__item--regular"
          {{ block.shopify_attributes }}
        >
          <div class="category-grid__item-content">
            {% if block.settings.image %}
              <div class="category-grid__item-image">
                <img 
                  src="{{ block.settings.image | image_url: width: 400 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  loading="lazy"
                >
              </div>
            {% endif %}
            
            <div class="category-grid__item-text">
              {% if block.settings.title != blank %}
                <h3 class="category-grid__item-title">{{ block.settings.title }}</h3>
              {% endif %}
              
              {% if block.settings.description != blank %}
                <p class="category-grid__item-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </div>
          
          {% if block.settings.link %}
            <a href="{{ block.settings.link }}" class="category-grid__item-link" aria-label="View {{ block.settings.title }}"></a>
          {% endif %}
        </div>
      {% endfor %}

      <!-- Empty placeholder blocks if needed -->
      {% assign remaining_blocks = 5 | minus: regular_blocks.size %}
      {% if remaining_blocks > 0 %}
        {% for i in (1..remaining_blocks) %}
          <div class="category-grid__item category-grid__item--placeholder">
            <div class="category-grid__item-content">
              <div class="category-grid__placeholder-text">Categoría {{ forloop.index | plus: regular_blocks.size }}</div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .category-grid {
    padding: var(--section-padding-top, 60px) 0 var(--section-padding-bottom, 60px);
    background-color: var(--color-background);
  }

  .category-grid__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .category-grid__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .category-grid__heading {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: var(--color-foreground);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }

  .category-grid__subheading {
    font-size: 1.1rem;
    color: var(--color-foreground);
    opacity: 0.8;
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .category-grid__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    align-items: start;
  }

  .category-grid__item {
    position: relative;
    background-color: var(--category-bg-color, #b8b8b8);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .category-grid__item--featured {
    background-color: var(--featured-bg-color, #ff6b35);
    color: var(--featured-text-color, #ffffff);
    grid-column: span 2;
    min-height: 300px;
  }

  .category-grid__item--regular {
    color: var(--category-text-color, #333333);
  }

  .category-grid__item--placeholder {
    background-color: var(--category-bg-color, #b8b8b8);
    color: var(--category-text-color, #666666);
  }

  .category-grid__item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .category-grid__item-content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    width: 100%;
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .category-grid__item--featured .category-grid__item-content {
    flex-direction: row;
  }

  .category-grid__item--regular .category-grid__item-content,
  .category-grid__item--placeholder .category-grid__item-content {
    flex-direction: column;
    text-align: center;
  }

  .category-grid__item-image {
    flex-shrink: 0;
  }

  .category-grid__item--featured .category-grid__item-image {
    width: 120px;
    height: 120px;
  }

  .category-grid__item--regular .category-grid__item-image {
    width: 80px;
    height: 80px;
  }

  .category-grid__item-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 8px;
  }

  .category-grid__item-text {
    flex: 1;
  }

  .category-grid__item-title {
    font-size: 1.3rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .category-grid__item--featured .category-grid__item-title {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .category-grid__item-description {
    font-size: 0.95rem;
    margin: 0 0 1rem 0;
    opacity: 0.9;
    line-height: 1.4;
  }

  .category-grid__item--featured .category-grid__item-description {
    font-size: 1rem;
  }

  .category-grid__item-button {
    display: inline-block;
    background-color: rgba(255, 255, 255, 0.2);
    color: inherit;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .category-grid__item-button:hover {
    background-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }

  .category-grid__item-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .category-grid__placeholder-text {
    font-size: 1.1rem;
    font-weight: 500;
    opacity: 0.7;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .category-grid {
      padding: 40px 0;
    }

    .category-grid__container {
      padding: 0 1rem;
    }

    .category-grid__grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .category-grid__item--featured {
      grid-column: span 1;
      min-height: 250px;
    }

    .category-grid__item--featured .category-grid__item-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .category-grid__item-content {
      padding: 1.5rem;
    }

    .category-grid__item--featured .category-grid__item-image {
      width: 100px;
      height: 100px;
    }

    .category-grid__item--regular .category-grid__item-image {
      width: 60px;
      height: 60px;
    }

    .category-grid__item-title {
      font-size: 1.1rem;
    }

    .category-grid__item--featured .category-grid__item-title {
      font-size: 1.3rem;
    }
  }

  @media screen and (max-width: 480px) {
    .category-grid__item {
      min-height: 180px;
    }

    .category-grid__item--featured {
      min-height: 220px;
    }

    .category-grid__item-content {
      padding: 1rem;
    }
  }
{% endstylesheet %}

